{
  "manifest_version": 2,
  "name": "LAezPaste - Copy Log Analytics to Teams",
  "version": "1.0",
  "description": "Adds a 'Copy for Teams' button to Azure Log Analytics that copies selected rows as a Teams-friendly markdown table",

  "permissions": [
    "clipboardWrite",
    "https://portal.azure.com/*",
    "https://*.reactblade.portal.azure.net/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://portal.azure.com/*",
        "https://*.reactblade.portal.azure.net/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "icons": {
    "48": "icon48.png",
    "96": "icon96.png"
  }
}
